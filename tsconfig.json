{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build"
    }
}
